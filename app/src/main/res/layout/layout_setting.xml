<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/button_normal_bg"
    android:baselineAligned="false"
    android:gravity="clip_vertical"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/tv_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="start"
        android:paddingLeft="10dp"
        android:textColor="#fff"
        android:textSize="@dimen/setting_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp">

        <com.hd.tvpro.view.SelectListView
            android:id="@+id/lv_setting_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:dividerHeight="@dimen/divider_height"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:listSelector="@drawable/item_bg_selector_setting_right" />

        <ListView
            android:id="@+id/lv_setting_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:dividerHeight="@dimen/divider_height"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:listSelector="@drawable/item_bg_selector_setting_right" />

    </LinearLayout>
</LinearLayout>
